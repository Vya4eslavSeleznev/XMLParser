<letter xmlns:th="http://www.w3.org/1999/xhtml">
    <title>
        <description th:text="${description}"/>
        <theme th:text="${theme}"/>
        <alien_race th:code="${code}"/>
        <created th:text="${date}"/>
        <id description="Идентификатор письма" th:value="${id}"/>
        <authors>
            <employee th:each="author: ${authors}">
                <name th:text="${author.name}"/>
                <second_name th:text="${author.secondName}"/>
                <lastname th:text="${author.lastname}"/>
                <position th:text="${author.position}"/>
            </employee>
        </authors>
    </title>
    <message>
        <paragraph th:each="message: ${messages}" th:text="${message}"/>
    </message>
    <contacts>
        <tel th:number="${phone}"/>
        <address th:description="${address}"/>
    </contacts>
    <sent_time th:text="${currentDate}"/>
</letter>
